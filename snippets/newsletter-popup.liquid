<!-- ------ Newsletter Popup ------------- -->
{% if settings.newsletter_enable %}
<div class="newsletter_overlay">
    <div class="newsletter_popup" style="background:url({% if settings.newsbanner_img != black %}{{ settings.newsbanner_img | img_url: 'master' }}{% else %}{{ 'placeholder_newsletter_popup.png' | asset_url }}{% endif %}) no-repeat center center;">
      <div class="pop_up_overlay"></div>
        <div class="close_btn"></div>
        {% if settings.newsletter_form_action != blank %}
            {% assign form_action = settings.newsletter_form_action %}
      		<form action="{{ form_action}}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form">                  
              <h6>{{ settings.newsletter_sub_title }}</h6>	
              <h2>{{ settings.popup_newsletter_title }}</h2>
              <h6>{{ settings.popup_descrition }}	</h6>
              <div class="filed_grp">
                  <input type="email" aria-label="Email" value="{% if customer %}{{ customer.email }}{% endif %}" id="mail"  placeholder="Your Email Address" name="EMAIL" required>
                  <input type="submit"  aria-label="submit" class="btn--secondary btn--small"/>
              </div>
             {% if settings.enable_newsletter_social %}
              <div class="social_box">
                <ul>
                  {% if settings.facebook_link != '' %}<li><a href="{{ settings.facebook_link }}" title="{{ 'layout.social.facebook_title' | t }}" target="_blank"> <span><i class="fa fa-facebook"></i></span></a>{% endif %}</li>
                  {% if settings.google_link != '' %}<li><a href="{{ settings.google_link }}"   target="_blank" ><span><i class="fa fa-google-plus"></i></span></a></li>{% endif %}
                  {% if settings.pinterest_link != '' %}<li><a href="{{ settings.pinterest_link }}" title="{{ 'layout.social.pinterest_title' | t }}" target="_blank"><span><i class="fa fa-pinterest-p"></i></span></a></li>{% endif %}
                  {% if settings.twitter_link != '' %}<li><a href="{{ settings.twitter_link }}" title="{{ 'layout.social.twitter_title' | t }}"  target="_blank"><span><i class="fa fa-twitter"></i></span></a></li>{% endif %}
                  {% if settings.instagram_link != '' %}<li><a href="{{ settings.instagram_link }}" title="{{ 'layout.social.instagram_title' | t }}"  target="_blank"><span ><i class="fa fa-instagram"></i></span></a></li>{% endif %}
                  {% if settings.vimeo_link != '' %}<li><a href="{{ settings.vimeo_link }}" title="{{ 'layout.social.vimeo_title' | t }}"  target="_blank"><span class="shopify-social-icon-vimeo-circle"></span></a></li>{% endif %}
                  {% if settings.youtube_link != '' %}<li><a href="{{ settings.youtube_link }}" title="{{ 'layout.social.youtube_title' | t }}"  target="_blank"><span class="shopify-social-icon-youtube-circle"></span></a></li>{% endif %}
                  {% if settings.tumblr_link != '' %}<li><a href="{{ settings.tumblr_link }}" title="{{ 'layout.social.tumblr_title' | t }}"  target="_blank"><span><i class="fa fa-tumblr"></i></span></a></li>{% endif %}
                 </ul>

              </div>
             {% endif %}
          	</form>
        {% else %}
      	      
      		{% form 'customer' %}
            {{ form.errors | default_errors }}
            <h6>{{ settings.newsletter_sub_title }}</h6>	
            <h2>{{ settings.popup_newsletter_title }}</h2>
            <h6>{{ settings.popup_descrition }}	</h6>
            {% if form.posted_successfully? %}
            	<p class="form--success">{{ 'contact.form.post_success' | t }}</p>
            {% else %}
      		
            <div class="filed_grp">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="Your Email Address" name="contact[email]" id="mail" required/> 
              <input type="submit" class="btn--secondary btn--small" value="Submit">
            </div>
      		
              {% if settings.enable_newsletter_social %}
              <div class="social_box">
                <ul>
                  {% if settings.facebook_link != '' %}<li><a href="{{ settings.facebook_link }}" title="{{ 'layout.social.facebook_title' | t }}" target="_blank"> <span><i class="fa fa-facebook"></i></span></a>{% endif %}</li>
                  {% if settings.google_link != '' %}<li><a href="{{ settings.google_link }}"   target="_blank" ><span><i class="fa fa-google-plus"></i></span></a></li>{% endif %}
                  {% if settings.pinterest_link != '' %}<li><a href="{{ settings.pinterest_link }}" title="{{ 'layout.social.pinterest_title' | t }}" target="_blank"><span><i class="fa fa-pinterest-p"></i></span></a></li>{% endif %}
                  {% if settings.twitter_link != '' %}<li><a href="{{ settings.twitter_link }}" title="{{ 'layout.social.twitter_title' | t }}"  target="_blank"><span><i class="fa fa-twitter"></i></span></a></li>{% endif %}
                  {% if settings.instagram_link != '' %}<li><a href="{{ settings.instagram_link }}" title="{{ 'layout.social.instagram_title' | t }}"  target="_blank"><span ><i class="fa fa-instagram"></i></span></a></li>{% endif %}
                  {% if settings.vimeo_link != '' %}<li><a href="{{ settings.vimeo_link }}" title="{{ 'layout.social.vimeo_title' | t }}"  target="_blank"><span class="shopify-social-icon-vimeo-circle"></span></a></li>{% endif %}
                  {% if settings.youtube_link != '' %}<li><a href="{{ settings.youtube_link }}" title="{{ 'layout.social.youtube_title' | t }}"  target="_blank"><span class="shopify-social-icon-youtube-circle"></span></a></li>{% endif %}
                  {% if settings.tumblr_link != '' %}<li><a href="{{ settings.tumblr_link }}" title="{{ 'layout.social.tumblr_title' | t }}"  target="_blank"><span><i class="fa fa-tumblr"></i></span></a></li>{% endif %}
                 </ul>

              </div>
             {% endif %}
            {% endif %}
            {% endform %}
      
        {% endif %}
         

    </div>
</div>
{% endif %}
